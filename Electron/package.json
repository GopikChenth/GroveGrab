{
  "name": "grovegrab-electron",
  "version": "1.0.0",
  "description": "GroveGrab - Spotify Playlist Downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"wait-on http://localhost:5173 && electron .\"",
    "start:backend": "cd ../Backend && .venv/Scripts/activate && python app.py",
    "start:frontend": "cd ../Client && npm run dev"
  },
  "build": {
    "appId": "com.grovegrab.app",
    "productName": "GroveGrab",
    "directories": {
      "output": "../Distribution/electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../Backend",
        "to": "app/backend",
        "filter": [
          "**/*",
          "!.venv/**/*",
          "!__pycache__/**/*",
          "!*.pyc",
          "!.env"
        ]
      },
      {
        "from": "../Client/dist",
        "to": "app/frontend"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GroveGrab",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "GroveGrab-Portable.exe"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": "AppImage",
      "category": "Audio"
    }
  },
  "keywords": [
    "spotify",
    "downloader",
    "music",
    "playlist"
  ],
  "author": "GroveGrab Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "express": "^4.18.2"
  }
}
